%html
  %body
    .m-3
      %nav.navbar.navbar-expand-lg.navbar-light.bg-light
        %h1 カクテルリスト
      %br
      %ul.list-group
        %p.list-group-item
          %span.text-dark
            カクテル名
          %br
          %span.text-muted.small
            = "スタイル　技法　アルコール"
        %hr
        - @can_recipes.each do |r|
          %a.list-group-item{href: "/recipe/detail/#{r[:id]}"}
            %span.text-dark
              = r[:name]
            %br
            %span.text-muted.small
              = "#{r[:style]}　#{r[:tech]}　#{r[:alcohol]}"