.m-3  
  %ul.list-group.mb-3
    %p.list-group-item
      %span.text-dark.font-weight-bold
        カクテル名
      %br
      %span.text-muted.small
        = "スタイル　技法　アルコール"
  %ul.list-group  
    - @recipes.each do |r|
      %a.list-group-item{href: "/recipes/detail/#{r[:id]}"}
        %span.text-dark.font-weight-bold
          = r[:name]
        %br
        %span.text-muted.small
          = "#{r[:style]}　#{r[:tech]}　#{r[:alcohol]}"